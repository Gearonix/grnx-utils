{
  "name": "types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/types/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/types",
        "main": "packages/types/src/index.ts",
        "tsConfig": "packages/types/tsconfig.lib.json",
        "assets": [{
          "glob": "README.md",
          "input": "packages/types",
          "output": "."
        }],
        "project": "packages/types/package.json",
        "compiler": "swc",
        "format": [
          "cjs",
          "esm"
        ]
      },
      "dependsOn": ["patch"]
    },
    "patch": {
      "command": "yarn changeset version"
    },
    "publish": {
      "command": "nx run scripts:run --script=publish.ts --argv=types",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/types/**/*.ts",
          "packages/types/package.json"
        ]
      }
    }
  },
  "tags": []
}
