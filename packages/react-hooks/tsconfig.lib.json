{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vitest/globals",
      "vitest/importMeta",
      "vite/client"
    ],
    "paths": {
      "@grnx-utils/types": [
        "../packages/types/src/index.ts"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/__tests__/**"]
}
