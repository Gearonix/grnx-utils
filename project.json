{
  "name": "root",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "kill-tasks": {
      "executor": "nx:run-commands",
      "options": {
        "command": "taskkill /im node.exe /F"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx affected -t lint --parallel=6"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run-many -t publish --parallel=6"
      }
    },
    "release-version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn changeset version && yarn install"
      }
    },
    "release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn nx affected:build && yarn changeset publish"
      }
    }
  }
}
