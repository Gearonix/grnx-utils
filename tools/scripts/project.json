{
  "name": "scripts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/scripts/src",
  "tags": [],
  "targets": {
    "run": {
      "command": "tsx -r tsconfig-paths/register src/{args.script} {args.argv}",
      "options": {
        "cwd": "tools/scripts"
      }
    },
    "generate-library": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx g @nx/js:lib {args.name} --publishable --importPath=@grnx-utils/{args.name} --bundler=rollup --unitTestRunner=none"
      }
    }
  }
}
